<% include partials/header %>

	<div class="container">
		<div id='dish-form'>

		<h3> Post Dish </h3>
		<form action="/dishes" method="POST">

		  <div class="form-group">
		    <label class="sr-only" for="title">Title</label>
		    <input type="text" class="form-control" id="title" name="dish[title]" placeholder="Dish">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="restaurant">Restaurant</label>
		    <input type="text" class="form-control" id="restaurant" name="dish[restaurant]" placeholder="Restaurant">
		  </div>
		  
		  <div class="form-group">
		    <label class="sr-only" for="image">Image</label>
		    <input type="text" class="form-control" id="image" name="dish[image]" placeholder="Image">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="price">Price</label>
		    <input type="number" class="form-control" id="price" name="dish[price]" placeholder="0.00" step="0.01" min="0">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="description">Description</label>
		    <textarea class="form-control" id="description" name="dish[description]" placeholder="Description" rows=5></textarea>
		  </div>

		  <button type="submit" class="btn btn-danger">Submit</button>
		</form>

		</div?
	</div>

<% include partials/footer %>