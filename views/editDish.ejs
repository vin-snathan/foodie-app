<% include partials/header %>

	<div class="container">
		<div id='dish-form'>

		<h3> Edit Dish </h3>
		<form action="/dishes/<%= toEditDish._id %>?_method=PUT" method="POST">

		  <div class="form-group">
		    <label class="sr-only" for="title">Title</label>
		    <input type="text" class="form-control" id="title" name="dish[title]" value="<%= toEditDish.title %>">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="restaurant">Restaurant</label>
		    <input type="text" class="form-control" id="restaurant" name="dish[restaurant]" value="<%= toEditDish.restaurant %>">
		  </div>
		  
		  <div class="form-group">
		    <label class="sr-only" for="image">Image</label>
		    <input type="text" class="form-control" id="image" name="dish[image]" value="<%= toEditDish.image %>">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="price">Price</label>
		    <input type="number" class="form-control" id="price" name="dish[price]" value="<%= toEditDish.price %>" step="0.01" min="0">
		  </div>

		  <div class="form-group">
		    <label class="sr-only" for="description">Description</label>
		    <textarea class="form-control" id="description" name="dish[description]" rows=5><%= toEditDish.description %></textarea>
		  </div>

		  <button type="submit" class="btn btn-danger">Edit</button>
		</form>
		<br/>
		<a href="/dishes"> Go back </a>

		</div?
	</div>

<% include partials/footer %>